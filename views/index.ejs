<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/youtube2mp3icon.png" type="image/x-icon">
    <title>YT2MP3 Converter</title>
</head>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-9VYKQ8W52L"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-9VYKQ8W52L');
</script>
<body>
    <div class="top-container">
        <div class="creator-credit">
            <p>Built with <i class="fa-solid fa-heart"></i> for Music lovers</p>
        </div>
        <form onsubmit="startProcess(event)">
            <h1><i class="fa-brands fa-youtube"></i> YouTube to MP3</h1>
            <p style="color: rgba(255,255,255,0.8); margin-bottom: 15px; font-size: 0.95rem;">Convert your favorite videos in seconds</p>
            <input type="text" id="urlInput" placeholder="Paste YouTube link here..." required>
            <button type="submit" id="dlBtn">
                <i class="fa-solid fa-download"></i> Download
            </button>
            
            <div id="progress-area">
                <div class="bar-bg"><div class="bar-fg" id="bar">0%</div></div>
                <p id="status-txt">Starting...</p>
            </div>
        </form>
    </div>
    

    <!-- HIDDEN FORM FOR DOWNLOADING (Magic happens here) -->
    <form id="hidden-dl-form" action="/api/stream" method="POST" style="display: none;">
        <input type="hidden" name="videoId" id="hiddenUrl">
        <input type="hidden" name="title" id="hiddenTitle">
    </form>
    <script>
        async function startProcess(e) {
            e.preventDefault();
            
            const url = document.getElementById('urlInput').value;
            const btn = document.getElementById('dlBtn');
            const area = document.getElementById('progress-area');
            const bar = document.getElementById('bar');
            const txt = document.getElementById('status-txt');

            // UI Reset
            btn.disabled = true;
            area.style.display = 'block';
            bar.style.width = '0%';

            try {
                // 1. Request Start
                const startRes = await fetch('/api/start', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ url })
                });
                const startData = await startRes.json();
                
                if(!startData.success) throw new Error(startData.error);

                // 2. Start Loop
                const interval = setInterval(async () => {
                    const pollRes = await fetch(`/api/status?id=${startData.pid}`);
                    const pollData = await pollRes.json();
                    
                    // Calculate Percentage (API gives 0-1000)
                    const progress = pollData.progress || 0;
                    const percent = Math.floor(progress / 10);
                    
                    bar.style.width = percent + '%';
                    bar.innerText = percent + '%';
                    txt.innerText = "Converting...";

                    // 3. CHECK FOR COMPLETION
                    // If progress is 1000 OR downloadUrl exists
                    if (pollData.downloadUrl) {
                        clearInterval(interval);
                        txt.innerText = "Done! Starting download...";
                        bar.style.background = "#10B981"; // Green
                        bar.style.width = '100%';
                        bar.innerText = '100%';

                        // 4. TRIGGER INSTANT DOWNLOAD VIA HIDDEN FORM
                        // Pass videoId to fetch fresh link at stream time
                        document.getElementById('hiddenUrl').value = startData.pid;
                        document.getElementById('hiddenTitle').value = startData.title;
                        document.getElementById('hidden-dl-form').submit();

                        // Reset button shortly after
                        setTimeout(() => { 
                            btn.disabled = false; 
                            btn.innerHTML = '<i class="fa-solid fa-download"></i> Download Again';
                            area.style.display = 'none';
                            document.getElementById('urlInput').value = '';
                        }, 3000);
                    }
                }, 500); // Check every 500ms for faster download

            } catch (err) {
                console.error(err);
                txt.innerText = "Error: " + err.message;
                btn.disabled = false;
            }
        }
    </script>
</body>
</html>